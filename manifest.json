{
	"name": "Reaction View Support",
	"version": "1.0",
	"description": "Rection View Support",
	"permissions": [
		"storage",
		"tabs",
		"webRequest",
		"webRequestBlocking",
		"*://*.youtube.com/*",
		"*://*.amazon.co.jp/*",
		"*://*.netflix.com/*",
		"*://*.funimation.com/*",
		"*://*.amazon.co.jp/*",
		"https://*.prd.funimationsvc.com/*"
	],
	"background": {
		"page": "background.html",
		"persistent": true
	},
	"browser_action": {
		"default_popup": "popup.html"
	},
	"content_scripts": [
		{
			"matches": ["*://*.youtube.com/*"],
			"js": ["utils.js", "youtube.js"]
		},
		{
			"matches": ["*://*.funimation.com/*"],
			"js": ["packages/vtt.min.js", "utils.js", "funimation.js"],
			"css": ["funimation.css"]
		},
		{
			"matches": ["*://*.netflix.com/*"],
			"js": ["utils.js", "netflix.js"]
		},
		{
			"matches": ["*://*.amazon.co.jp/*"],
			"js": ["utils.js", "primevideo.js"]
		}
	],
	"options_ui": {
		"page": "options.html",
		"open_in_tab": false
	},
	"web_accessible_resources": [
		"static/auto-scroll.png",
		"static/pause-scroll.png"
	],
	"manifest_version": 2
}
